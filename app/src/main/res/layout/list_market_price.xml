<LinearLayout android:id="@+id/linear_add_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/linear_prod"

    android:orientation="horizontal"
    android:weightSum="3"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/et_quanity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/p20"
        android:padding="@dimen/p5"
        android:layout_weight="1.2"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="0"
        android:textColor="@color/black"

        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/p20"
        android:layout_weight="1.2"
        android:id="@+id/et_net_price"
        android:background="@null"
        android:padding="@dimen/p5"
        android:gravity="center"
        android:textColor="@color/black"
        android:hint="0" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:padding="@dimen/p5"

        android:id="@+id/img_del"
        android:gravity="end"
        android:src="@drawable/engrodelete" />


</LinearLayout>