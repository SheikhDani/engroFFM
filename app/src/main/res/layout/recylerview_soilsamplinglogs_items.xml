    <LinearLayout
        android:id="@+id/layout_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p10"

        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/farmer_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/p20"
            android:layout_weight="2"
            android:text="Farmer id : 23123"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/farmer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_member"
        android:layout_marginTop="@dimen/p5"
        android:layout_marginLeft="@dimen/p20"
        android:gravity="center_vertical"
        android:text="Farmer Name : Danish"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/farmer_checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p5"
        android:layout_below="@+id/farmer_name"
        android:layout_marginLeft="@dimen/p20"
        android:gravity="center_vertical"

        android:text="Checkin : 2021/34/21"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/farmer_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p5"
        android:layout_below="@+id/farmer_checkin"
        android:layout_marginLeft="@dimen/p20"
        android:gravity="center_vertical"

        android:text="Checkout : 2021/34/21"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/farmer_reference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p5"
        android:layout_below="@+id/farmer_checkout"
        android:layout_marginLeft="@dimen/p20"
        android:gravity="center_vertical"
        android:text="Reference : maria.zafar"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0" />
</RelativeLayout>