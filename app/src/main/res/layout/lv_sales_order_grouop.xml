<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/p5"
        card_view:cardElevation="@dimen/p5"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/p0"
                android:paddingLeft="@dimen/p10"

                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sales_order_no"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:text="Sales Order # 000213123"
                    android:padding="@dimen/p5"
                    android:textAllCaps="true"
                    />
                <ImageView
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:layout_width="@dimen/p0"
                    android:layout_weight="0.3"
                    android:id="@+id/img"
                    android:layout_height="wrap_content"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/p0"
                android:layout_weight="2"
                android:paddingLeft="@dimen/p10"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/sales_order_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Dated: May 4,2020"
                    android:padding="@dimen/p5"
                    android:textAllCaps="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/p0"
                android:paddingLeft="@dimen/p10"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/sales_order_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product: Eftrt Artigrage Garnular SOP 50kg"
                    android:padding="@dimen/p5"
                    android:textAllCaps="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/p0"
                android:paddingLeft="@dimen/p10"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/sales_order_quanity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Quanityt: 209"
                    android:padding="@dimen/p5"
                    android:textAllCaps="true"
                    />
            </LinearLayout>





        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
