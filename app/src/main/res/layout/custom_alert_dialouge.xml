<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/p50"
            android:background="@color/bluedark"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                android:id="@+id/tv_option"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:textColor="@color/white"
                android:textSize="@dimen/ts18"
                android:text="Alert"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/upload_dialouge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l1"
            android:layout_marginStart="@dimen/p10"
            android:layout_marginTop="@dimen/p10"
            android:layout_marginEnd="@dimen/p10"
            android:layout_marginBottom="@dimen/p10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_body"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="@dimen/ts16"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/eidttext_boader"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:text="Yes"
                    android:textColor="@color/bluedark"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:visibility="gone"
                    android:layout_height="fill_parent"
                    android:background="@color/bluedark"></View>

                <Button
                    android:id="@+id/btn_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:text="No"
                    android:textColor="@color/bluedark"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>