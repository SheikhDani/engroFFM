<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
      android:id="@+id/linear_name"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/productname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/p30"
            android:textSize="16sp"
            android:textStyle="bold"

            android:text="Name: Engro urea"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/linear_name"
        android:id="@+id/linear_quantity"

        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/p30"


            android:text="Qantity : 230"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/linear_quantity"
        android:id="@+id/linear_date"

        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/visitdate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/p30"

            android:text="Visit Date: june 7, 2021"
            />


    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
   android:layout_below="@+id/linear_date"
        android:layout_marginBottom="@dimen/p10"
        android:background="@color/grey" />
</RelativeLayout>