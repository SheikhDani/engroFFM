<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rel_next_visit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/p10">

            <TextView
                android:id="@+id/txt_next_visit"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/p15"
                android:text="NEXT Visit"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/txt_next_visit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/p20"
                android:layout_toRightOf="@+id/txt_next_visit"
                android:padding="@dimen/p15"
                android:text="Ap2 22, 2022"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>

        <View

            android:id="@+id/sep1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel_next_visit"
            android:layout_marginTop="@dimen/p5"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/rel_last_visit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_next_visit"
            android:layout_marginTop="@dimen/p10">

            <TextView
                android:id="@+id/txt_last_visit"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/p15"
                android:text="LAST Visit"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/txt_last_visit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/p20"
                android:layout_toRightOf="@+id/txt_last_visit"
                android:padding="@dimen/p15"
                android:text="Ap2 22, 2022"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/txt_last_visit_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/p20"
                android:layout_toRightOf="@+id/txt_last_visit_date"
                android:padding="@dimen/p15"
                android:text="View"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>

        <View

            android:id="@+id/sep3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rel_last_visit"

            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/linear_td"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_last_visit">

            <TextView
                android:id="@+id/txt_current_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/p20"

                android:text="Current Balance - PKR"
                android:textColor="@color/black"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/txt_balance_amount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_current_balance"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/p20"
                android:gravity="center_vertical|end"
                android:text="70,00,000"

                android:textStyle="bold"

                />


            <View

                android:id="@+id/sep2"
                android:layout_width="1dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@+id/txt_current_balance"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/txt_pending_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/p20"
                android:layout_toRightOf="@+id/sep2"
                android:gravity="center_vertical"
                android:padding="@dimen/p20"
                android:text="Pending Order"
                android:textColor="@color/black"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/txt_pending_order_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/p20"
                android:layout_toRightOf="@+id/txt_pending_order"
                android:gravity="center_vertical"
                android:padding="@dimen/p20"
                android:text="2"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:textStyle="bold"

                />


        </RelativeLayout>
        <View

            android:id="@+id/sep4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linear_td"

            android:background="@color/grey" />


    </RelativeLayout>
</ScrollView>
