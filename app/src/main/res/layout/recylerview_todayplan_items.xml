<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/p50"
        android:layout_height="@dimen/p50"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:contentDescription="Icon"
        android:src="@drawable/engrologo" />

    <!--    <ImageView-->
    <!--        android:id="@+id/forward_img"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_alignParentRight="true"-->
    <!--        android:layout_centerVertical="true"-->
    <!--        android:layout_marginStart="@dimen/activity_horizontal_margin"-->
    <!--        android:layout_marginEnd="@dimen/activity_horizontal_margin"-->
    <!--        android:contentDescription="Icon"-->
    <!--        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />-->

    <LinearLayout
        android:id="@+id/layout_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p5"
        android:layout_toEndOf="@id/imageView"
        android:layout_toRightOf="@id/imageView"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/p2"
            android:layout_toEndOf="@id/imageView"
            android:layout_toRightOf="@id/imageView"
            android:layout_weight="2.5"


            android:text="Abid Hussain &amp; Brothers"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_baseline_check_circle_24"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView_subcription"
            android:layout_width="0dp"
            android:layout_height="22dp"




            android:layout_weight="1.3"

            android:background="@drawable/textview_boarder"

            android:gravity="center"
            android:text="Visited"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/sale_point"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_lcoation_status"

        android:layout_toEndOf="@id/imageView"
        android:layout_toRightOf="@id/imageView"
        android:gravity="center_vertical"
        android:text="Sales Point: Kot Ghulam Muhammad "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sale_point"
        android:layout_toEndOf="@id/imageView"
        android:layout_toRightOf="@id/imageView"
        android:drawableLeft="@drawable/ic_baseline_access_time_24"
        android:drawablePadding="@dimen/p5"
        android:drawableTint="@color/black"
        android:gravity="center_vertical"
        android:text="9:00 am"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sale_point"
        android:layout_marginLeft="@dimen/p30"
        android:layout_toEndOf="@id/time"
        android:layout_toRightOf="@id/time"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:drawableTint="@color/black"
        android:gravity="center_vertical"
        android:text="105 KMS away"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/customer_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/layout_member"
        android:layout_toEndOf="@id/imageView"
        android:layout_toRightOf="@id/imageView"
        android:gravity="center_vertical"

        android:text="Customer Code: 8103214"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/customer_lcoation_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

android:visibility="gone"
        android:layout_below="@+id/customer_code"
        android:layout_toEndOf="@id/imageView"
        android:layout_toRightOf="@id/imageView"
        android:gravity="center_vertical"

        android:text="Location: Verified"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0" />

</RelativeLayout>